{
  "compilerOptions": {
    "allowJs": false,
    "experimentalDecorators": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/index.d.ts",
    "manifests/**/*.ts",
    "../../@types/**/*.ts"
  ],
  "exclude": [
    "node_modules", 
    "**/*.spec.ts"
  ]
}
