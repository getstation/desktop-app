{
  "compilerOptions": {
    "allowJs": false,
    "experimentalDecorators": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "tslib": ["node_modules/tslib"],
      "@src/*": ["src/*"]
    },
    "lib": ["es2017", "dom"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules", 
    "**/*.spec.ts"
  ]
}
